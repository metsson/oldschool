@model MovieScore.Models.Movie

@if (Model != null)
{  
<!-- Movie details -->   
<div class="well well-lg">
    <div class="row push-bottom">
        <div class="col-md-9">
            <section class="search-result" id="@Html.DisplayFor(m => m.MovieID)">
                <h1>@Html.DisplayFor(m => m.Title)
                </h1>
                <h2>@Html.DisplayFor(m => m.Score)/10 
                <small>
                    @Html.DisplayFor(m => m.Voters) voters, @Html.DisplayFor(m => m.Credibility)% safe.
                    <a href="#@Url.Action("About", "Home")">What is this?</a>
                </small>
                </h2>
                <p>
                    @Html.DisplayFor(m => m.Plot)
                </p>
            </section>
            <!-- Will not work with VPN 
            <div class="fb-like" data-href="http://www.moviecheck.com/Home/Movie/@Html.DisplayFor(m => m.MovieID)" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
            <div class="g-plusone" data-annotation="none"></div>
            <a href="https://twitter.com/share" class="twitter-share-button" data-size="large">Tweet</a>
            -->
        </div>
        <div class="col-md-3 visible-md visible-lg">
            <aside>
                <img class="movie-poster" src="@Html.DisplayFor(m => m.PosterPath)" />
            </aside>
        </div>
    </div>
</div>
<!-- Movie details -->        
}
