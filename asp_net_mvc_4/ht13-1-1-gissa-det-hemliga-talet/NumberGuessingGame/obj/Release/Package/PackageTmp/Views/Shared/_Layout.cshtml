<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div id="wrap">
    <div id="container">

        <!-- Begin page content -->
        <div class="container">
            <div class="page-header">
                <h1>Gissa det hemliga talet</h1>
            </div>
            <p class="lead">
                Välkommen till en av Internets roligaste lekar! <br />
                Du har sju försök på dig att gissa rätt tal mellan 1 och 100.
            </p>
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<div id="footer">
    <div class="container">
        <p class="text-muted credit">Av Merkur Hoxha <a href="https://github.com/metsson">mh222vn</a></p>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@RenderSection("scripts", required: false)
</body>
</html>
