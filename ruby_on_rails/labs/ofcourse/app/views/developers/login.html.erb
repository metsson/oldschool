<% if flash[:developer] %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<p><%= flash[:developer] %></p>
	</div>
<% end %>
<%= form_tag log_in_path, :method => 'post' do %>
  <div class="form-group">
    <%= label_tag :email, 'E-mail' %>
    <%= text_field_tag :email, nil, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password' %>
    <%= password_field_tag :password, nil,  :class => 'form-control' %>
  </div>      
  <%= link_to 'Don\'t have an account?', sign_up_path, :class => 'btn btn-default btn-lg' %>    
  <%= submit_tag "Log in", :class => "btn btn-success btn-lg pull-right", :name => "submit", :disabled => false, :disable_with => "Processing..." %>
<% end %>