<div class="single-post">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @post.title %>
  </h1>
  <h3>
    <%= @post.likes.size %> likes
  </h3>
  <p>
    <% if @like %>
      <%= link_to 'Unlike', post_like_path(@post.id) %>
    <% else %>
      <%= link_to 'Like', post_like_path(@post.id) %>
    <% end %>
  </p>
  <p><%= @post.entry %></p>
  <small>Published by <%= current_user.name %> <%= time_ago_in_words(@post.created_at) %> ago</small>
  <hr>
  <h3>Comments</h3>
  <% @post.comments.each do |comment| %>
    <p>
      <strong>Comment:</strong>
      <%= comment.comment_entry %>
    </p>
  <% end %>
  <hr>
  <h3>Add a comment:</h3>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :comment_entry %><br />
      <%= f.text_area :comment_entry, cols: 40, rows: 5 %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>

<div class="actions">
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
